# Use bat instead of cat
alias cat='bat'

# Shortcut for wslview
alias v="wslview"

# Open project files with SSC
alias so="ssc open"

# Prevent accidental overwriting when copying
# -i (interactive)      prompt before overwrite
alias cp="cp -i"

# Always show df with human readable sizes
# -h (human-readable)   print sizes in powers of 1024 (e.g., 1023M)
alias df='df -h'

# Add some commonly used options to ls
# -A (almost-all)       do not list implied . and ..
# -F (classify)         append indicator (one of */=>@|) to entries
# -h (human-readable)   print sizes like 1K 234M 2G etc.
# -l                    use a long listing format
alias ls='exa -alF'

# ls sorted by time
# -t                    sort by modification time, newest first
alias lt='exa -alFrs modified'

# ls sorted by file size
# -S                    sort by file size, largest first
alias lz='exa -alFrs size'

# shorter ls
alias l="ls"

# List jobs and their IDs
alias j='jobs -l'

# Always display colour on grep output
alias grep="grep --color"

# Change the config directory for SVN
alias svn="svn --config-dir \"${XDG_CONFIG_HOME}/subversion\""

# Change the RC file location for Yarn
alias yarn="yarn --use-yarnrc \"${XDG_CONFIG_HOME}/yarn/config\""

# Open a ~/code or ~/saffron file in vscode or explorer.exe
alias f="find-and-open"

# Change directories to the selected ~/code or ~/saffron folder
alias c='cd "$(find-dir)"'

# Change the hsts file location used by wget
alias wget='wget --hsts-file="$XDG_CACHE_HOME/wget-hsts"'

# Open a previously opened file in the relevant program
alias r="open-recent"

# Open the most recently opened file in the relevant program
alias rr="open-recent 1"

# Open a project in vscode
alias p='open-project'
